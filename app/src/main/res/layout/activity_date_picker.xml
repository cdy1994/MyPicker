<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="luojie.hnulab.datepicker.DatePickerActivity" >

    <Button
        android:id="@+id/year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onYearPicker"
        android:text="年选择器" >
    </Button>
    
    <Button
        android:id="@+id/yearmonthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onYearMonthDayPicker"
        android:text="年月日选择器" >
    </Button>

    <Button
        android:id="@+id/yearmonth"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onYearMonthPicker"
        android:text="年月选择器" >
    </Button>

    <Button
        android:id="@+id/monthday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onMonthDayPicker"
        android:text="月日选择器" >
    </Button>
</LinearLayout>